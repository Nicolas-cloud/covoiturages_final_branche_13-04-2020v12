{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs | {{ parent() }}{% endblock %}

    {% block head %}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

        {% endblock stylesheets %}
    {% endblock head %}

{% block body %}
    <style>
        th{
            text-align : center;
        }
        .table{
            text-align : center;
        }

    </style>

    <h1>Liste des utilisateurs</h1>
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Email</th>
            <th>Rôles</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == "ROLE_ADMIN" %} 
                                Administrateur
                            {% elseif role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_EDITOR" %}
                                Éditeur 
                            {% elseif role == "ROLE_MODO" %}
                                Modérateur 
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('admin_modifier_utilisateur', {'id': user.id}) }}"
                        class="btn-warning">Modifier</a>
                        <a href="{{ path('admin_delete', {'id': user.id}) }}"
                        class="btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan=5>Il n'y a pas d'utilisateur inscrit</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}