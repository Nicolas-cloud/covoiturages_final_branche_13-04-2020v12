{% extends 'base.html.twig' %}

{% block title %}Liste trajets | {{ parent() }}{% endblock %}
    {% block head %}
    
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    {% endblock head %}

    {% block javascripts %}
{% endblock %}

{% block body %}

    <style>
        .block{
            width:100%;
	        height:100%;
            border-color: red;
            margin-top: 10px;
            border: 4px double black;
        }
        h1{
            font-size: 45px;
        }
    </style>
    <h1>Liste des derniers trajets</h1><br>
    <div class="container">
        <div class="row">
            {% for trajet in trajets %}
                <div class="col-sm-3 col-md-4 col-lg-4">
                    <div class="block">
                        <div class="block-body">
                            <h5 class="card-title" style="text-align:center;">
                                <a href="{{ path('trajet.show', {'slug': trajet.slug}) }}">{{ trajet.VilleDepart }} - {{ trajet.VilleArrivee }}</a>
                            </h5>
                            <p class="text-danger">Départ à {{ trajet.HeureDepart|date('h:i:s') }}</p>
                            <p class="card-time">Arrivée vers {{ trajet.HeureArrivee|date('h:i:s') }}</p>
                            <p class="text-default">{{ trajet.NbPlaces }} places disponibles</p>
                            <p class="card-text">{{ trajet.Prix|number_format(0, '', '') }}€</p>
                            <p class="text-info">Expire le {{ trajet.DateExpiration|date('d/m/Y') }}</p>
                            <p class="card-button">
                            <a class="btn btn-info" href="{{ path('trajet.show', {'slug': trajet.slug}) }}">Voir les infos</a>
                                <a class="btn btn-warning" href="{{ path('trajet.edit',{ 'slug': trajet.slug }) }}">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    Éditer</a>
                                <a class="btn btn-danger" href="{{ path('trajet.delete',{ 'slug':trajet.slug }) }}">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    Supprimer</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}