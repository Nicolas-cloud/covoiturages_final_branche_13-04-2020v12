{% extends 'base.html.twig' %}

{% block title %}Liste trajets | {{ parent() }}{% endblock %}
    {% block head %}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <style>
                .listeTrajet{
                    text-align : center;
                }
            </style>
        {% endblock stylesheets %}
    {% endblock head %}

    {% block javascripts %}{% endblock %}

{% block body %}
    <table class="table text-center">
        <tr>
            <th class="active text-center">VilleDepart</th>
            <th class="active text-center">VilleArrivee</th>
            <th class="active text-center">HeureDepart</th>
            <th class="active text-center">HeureArrivee</th>
            <th class="active text-center">NbPlaces</th>
            <th class="active text-center">Prix</th>
            <th class="active text-center">Description</th>
            <th class="active text-center">DateCreation</th>
            <th class="active text-center">DateExpiration</th>
            <th class="active text-center">Détails</th>
            <th class="active text-center">Actions</th>

        </tr>

        {% for trajet in trajets %}
            <div class="listeTrajet">
                <tr>
                    <td>{{ trajet.VilleDepart }}</td>
                    <td>{{ trajet.VilleArrivee }}</td>
                    <td>{{ trajet.HeureDepart|date('h:i:s') }}</td>
                    <td>{{ trajet.HeureArrivee|date('h:i:s') }}</td>
                    <td>{{ trajet.NbPlaces }}</td>
                    <td>{{ trajet.Prix }}</td>
                    <td>{{ trajet.Description }}</td>
                    <td>{{ trajet.DateCreation|date('m/d/Y') }}</td>
                    <td>{{ trajet.DateExpiration|date('m/d/Y') }}</td>
                    <td><a href="{{  path('trajet.show', {'slug': trajet.slug}) }}">Voir les infos</a></td>
                    <td><a class="btn btn-primary" href="{{ path('trajet.edit',{ 'slug': trajet.slug }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                        <a class="btn btn-primary" href="{{ path('trajet.delete',{ 'slug':trajet.slug }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Supprimer
                    </td>
                </tr>
            </div>
        {% endfor %}
    </table>
{% endblock %}