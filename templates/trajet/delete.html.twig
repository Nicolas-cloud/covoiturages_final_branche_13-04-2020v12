{% extends 'base.html.twig' %}

{% block title %}Supprimer trajet | {{ parent() }}{% endblock %}

{% block body %}

    <div class="alert alert-danger">
        <strong>Avertissement !</strong> Vous êtes en train de supprimer le trajet suivant :
        <ul>
            <li><strong>{% trans %}Departure city : {% endtrans %}</strong> {{ trajet.VilleDepart }}</li>
            <li><strong>{% trans %}Arrival city : {% endtrans %}</strong> {{ trajet.VilleArrivee }}</li>
            <li><strong>{% trans %}Departure time : {% endtrans %}</strong> {{ trajet.HeureDepart|date('h:i:s') }}</li>
            <li><strong>{% trans %}Departure arrival : {% endtrans %}</strong> {{ trajet.HeureArrivee|date('h:i:s') }}</li>
            <li><strong>{% trans %}Creation date : {% endtrans %}</strong> {{ trajet.DateCreation|date('m/d/Y') }}</li>
        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="{{ path('trajet.list') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>{% trans %}Cancel{% endtrans %}</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes vous sûr ??')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        {% trans %}Delete{% endtrans %}
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}