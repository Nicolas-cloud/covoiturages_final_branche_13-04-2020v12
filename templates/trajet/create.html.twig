{% extends 'base.html.twig' %}

{% block title %}Nouveau trajet | {{ parent() }}{% endblock %}

{% block body %}
    <style>
        .row{
            margin-left: 25%;
        }

    </style>

    <h1>Proposer un nouveau trajet</h1>
    <div class="media" style="margin-top: 60px;">

        {{ form_start(form) }}

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.ville_depart) }}</div>
            <div class="col-md-4">{{ form_row(form.ville_arrivee) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.heure_depart) }}</div>
            <div class="col-md-4">{{ form_row(form.heure_arrivee) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.nb_places) }}</div>
            <div class="col-md-4">{{ form_row(form.prix) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.description) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.date_expiration) }}</div>
        </div>
        <div class="row">
            <div class="form-group" style="margin-left:2%;">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </div>
        {{ form_widget(form) }}
    </div>


    {{ form_end(form) }}
{% endblock %}