{% extends 'base.html.twig' %}

{% block title %}Détails trajet | {{ parent() }}{% endblock %}



{% block body %}
    <style>

    </style>

    <h1>Détails du Trajet <i>{{ trajet.VilleDepart }} - {{ trajet.VilleArrivee }}</i></h1>
    <div class="media" style="margin-top: 45px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ trajet.VilleDepart }} - {{ trajet.VilleArrivee }}</strong></h3>
                </div>
                <div class="col-sm-10">
                    <p class="text">Nombre de places disponibles {{ trajet.NbPlaces }}</i></p>
                </div>
                <div class="col-sm-10">
                    <p class="text">Prix du trajet {{ trajet.Prix }}.00 €</i></p>
                </div>
            </div>
            <div class="col-sm-10">
                <p class="text-default"><strong>Informations du covoitureur : </strong></p>
                <p>{{ trajet.description|nl2br }}</p><br>
            </div>
            <div class="col-sm-12">
                <i class="pull-right">{% trans %}Published on{% endtrans %} {{ trajet.getDateCreation()|date('m/d/Y') }}</i>
            </div>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="{{ path('trajet.list') }}">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        {% trans %}List of routes{% endtrans %}
                    </a>
                    <a class="btn btn-primary" href="{{ path('trajet.edit', {'slug': trajet.slug}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        {% trans %}Edit{% endtrans %}
                    </a>
                    <a class="btn btn-danger" href="{{ path('trajet.delete',{ 'slug':trajet.slug }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    {% trans %}Delete{% endtrans %}</a>
                </div>
            </div>  
        </div>
    </div>
{% endblock %}