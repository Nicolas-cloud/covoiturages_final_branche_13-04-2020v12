{% extends 'base.html.twig' %}

{% block title %}Détails trajet | {{ parent() }}{% endblock %}


{% block body %}
    <h1>Détails du Trajet <i>{{ trajet.VilleDepart }} - {{ trajet.VilleArrivee }}</i></h1><br>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ trajet.VilleDepart }} - {{ trajet.VilleArrivee }}</strong></h3>
                </div>
                <div class="col-sm-10">
                    <p class="text">Nombre de places encore disponibles {{ trajet.NbPlaces }}</i></p>
                </div>
                <div class="col-sm-10">
                    <p class="text">Prix du trajet {{ trajet.Prix }}€</i></p>
                </div>
            </div>
            <div class="col-sm-10">
                <p class="text-default">Informations du covoitureur : {{ trajet.description|nl2br }}</p>
            </div>
            <div class="col-sm-2">
                <i class="pull-right">Publié le {{ trajet.getDateCreation()|date('m/d/Y') }}</i>
            </div>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="{{ path('trajet.list') }}">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des trajets
                    </a>
                    <a class="btn btn-primary" href="{{ path('trajet.edit', {'slug': trajet.slug}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>  
        </div>
    </div>
{% endblock %}