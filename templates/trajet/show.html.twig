{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du Trajet <i>{{ trajet.id }}</i> proposé :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ trajet.VilleDepart }}</strong><i>({{ trajet.VilleArrivee }})</i></h3>
                </div>
                <div class="col-sm-10">
                    Nombre de places encore disponibles :
                    <h4 class="media-heading"><i>({{ trajet.getNbPlaces() }})</i></h4>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ trajet.getDateCreation()|date('m/d/Y') }}</i>
                </div>
            </div>

            <div>
                Informations données sur le trajet : <p>{{ trajet.description|nl2br }}</p>
            </div>

            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="{{ path('trajet.list') }}">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des trajets
                    </a>
                    <a class="btn btn-primary" href="{{ path('trajet.edit',{ 'id': trajet.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}